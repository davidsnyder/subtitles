Dialogue: 0,0:11:02.62,0:11:06.60,yamadas,,0,0,0,,
Dialogue: 0,0:11:06.85,0:11:08.45,yamadas,,0,0,0,,
Dialogue: 0,0:11:08.45,0:11:10.92,yamadas,,0,0,0,,
Dialogue: 0,0:11:10.92,0:11:12.05,yamadas,,0,0,0,,
Dialogue: 0,0:11:12.05,0:11:14.37,yamadas,,0,0,0,,
Dialogue: 0,0:11:14.37,0:11:16.02,yamadas,,0,0,0,,
Dialogue: 0,0:11:16.10,0:11:17.37,yamadas,,0,0,0,,
